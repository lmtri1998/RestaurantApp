            <Label text="Description:" />
            <TextField fx:id="description" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="275.0" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
